@using System.Security.Claims;

<!doctype html>
<html lang="en">
<head>
    <title>Sidebar 02</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    @{
        var roleClaim = Context.User.FindFirst(ClaimTypes.Role);
        var role = roleClaim?.Value;
    }


    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <div class="p-4 pt-5">
                <h1><a href="https://localhost:7264/" class="logo">Book Stores</a></h1>
                <ul class="list-unstyled components mb-5">
                    @*<li class="active">
                            <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Home</a>
                            <ul class="collapse list-unstyled" id="homeSubmenu">
                                <li>
                                    <a href="#">Home 1</a>
                                </li>
                                <li>
                                    <a href="#">Home 2</a>
                                </li>
                                <li>
                                    <a href="#">Home 3</a>
                                </li>
                            </ul>
                        </li>*@
                    <li>
                        <a href="https://localhost:7264/Home">Home</a>
                    </li>
                    @if (role.Equals("1"))
                    {
                        <li>
                            <a href="https://localhost:7264/Publisher">Publisher</a>
                        </li>
                        <li>
                            <a href="https://localhost:7264/Author">Author</a>
                        </li>
                        <li>
                            <a href="https://localhost:7264/Book">Book</a>
                        </li>
                    }
                    @if (role.Equals("2"))
                    {
                        <li>
                            <a href="https://localhost:7264/Profile">Profile</a>
                        </li>
                    }
                    <li>
                        <a href="https://localhost:7264/Logout">Logout</a>
                    </li>
                </ul>

            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">
            @RenderBody()
        </div>
    </div>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main_bar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
